[Unit]
Description=Mounts VirtualBox shared folder during start
Documentation=https://github.com/Whonix/shared-folder-help
ConditionPathExists=/mnt/shared
ConditionVirtualization=oracle
After=vboxguest.service
After=virtualbox-guest-utils.service

[Service]
Type=oneshot
ExecStart=/bin/bash -c '/bin/mount -t vboxsf -o uid=1000,gid=1000 shared /mnt/shared || true'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
